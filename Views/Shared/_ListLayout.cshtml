@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pageplugins {
    @RenderSection("pageplugins", required: false)
    <script src="~/Content/assets/global/plugins/datatables/datatables.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery-multi-select/js/jquery.multi-select.js" type="text/javascript"></script>
    <script src="~/Scripts/html.sortable.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery.quicksearch.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/dropzone/dropzone.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/featherlight/featherlight.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/Trumbowyg/trumbowyg.js"></script>
}

@section pagescripts {
    @RenderSection("pagescripts", required: false)
    <script src="~/Scripts/Datatable.js" type="text/javascript"></script>
    <script src="~/Scripts/EditPanel.js" type="text/javascript"></script>
    <script src="~/Scripts/DateRange.js" type="text/javascript"></script>
}

@section pagepluginstyles {
    @RenderSection("pagepluginstyles", required: false)
    <link href="~/Content/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/jquery-multi-select/css/multi-select.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/dropzone/basic.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/featherlight/featherlight.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/dropzone/dropzone.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/Trumbowyg/ui/trumbowyg.css" rel="stylesheet" type="text/css" />
}

@section pagestyles {
    @RenderSection("pagestyles", required: false)
}

@RenderBody()

<div class="modal-holder">
    <div class="modal fade" id="largeAddEditModal" role="form" aria-hidden="true">
        <div class="modal-dialog edit-panel-modal">
            <div class="modal-content modal-main">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn login-btn" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn delete-button modal-okay"></button>
                </div>
            </div>
            <div class="modal-content modal-loader">
                <div class="modal-header">
                    <img src="~/Content/Theme/Images/loading-spinner-grey.gif" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="largeAddEditModalAccept" role="form" aria-hidden="true">
        <div class="modal-dialog edit-panel-modal">
            <div class="modal-content modal-main">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn login-btn" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn add-button modal-okay"></button>
                </div>
            </div>
            <div class="modal-content modal-loader">
                <div class="modal-header">
                    <img src="~/Content/Theme/Images/loading-spinner-grey.gif" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bs-modal-sm" id="smallAlertModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn login-btn modal-okay" data-dismiss="modal">Okay</button>
                </div>
            </div>
            <div class="modal-content modal-loader hidden">
                <div class="modal-header">
                    <img src="~/Content/Theme/Images/loading-spinner-grey.gif" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>
</div>
@using BioConnected.Models
@model ResetPasswordViewModel
@{
    ViewBag.Title = "Create Account";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div class="logo">
    <img src="~/Content/Theme/Images/Logo.png" alt="" width="350" />
</div>
<div class="content outer">
    @if (ViewBag.Success != null)
            {
        <div class="alert alert-success">
            <strong>Success!</strong> @ViewBag.Success
        </div>
    }
    @if (ViewBag.Error != null)
            {
        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.Error
        </div>
    }
    @if (ViewBag.Warning != null)
            {
        <div class="alert alert-warning">
            <strong>Warning!</strong> @ViewBag.Warning
        </div>
    }
    <div class="content-inner">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title">Reset your password</h3>

            <h5 class="form-title">Please enter your new password:</h5>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-solid placeholder-no-fix", placeholder = "Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control form-control-solid placeholder-no-fix", placeholder = "Re-type your Password" })
                </div>
            </div>

            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.UserId)

            <div class="form-actions">
                <button type="submit" class="btn pull-right mid-color login-btn">Submit</button>
                <div class="clearfix"></div>
            </div>
        }
    </div>
</div>


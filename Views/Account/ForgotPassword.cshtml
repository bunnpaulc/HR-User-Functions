@using BioConnected.Models
@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password Account";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div class="logo">
    <img src="~/Content/Theme/Images/Logo.png" alt="" width="350" />
</div>
<div class="content outer">
    @if (ViewBag.EmailSent != null)
    {
        <div class="alert alert-success">
            @ViewBag.EmailSent
        </div>
    }
    @if (ViewBag.Success != null)
            {
        <div class="alert alert-success">
            <strong>Success!</strong> @ViewBag.Success
        </div>
    }
    @if (ViewBag.Error != null)
            {
        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.Error
        </div>
    }
    @if (ViewBag.Warning != null)
            {
        <div class="alert alert-warning">
            <strong>Warning!</strong> @ViewBag.Warning
        </div>
    }
    <div class="content-inner">

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title">Forget Password?</h3>

            <h5 class="form-title">Enter your email address below to reset your password.</h5>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email Address" })
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn pull-right mid-color login-btn">Submit</button>
                <a href="Login" class="btn btn-back pull-left mid-color">Back</a>
                <div class="clearfix"></div>
            </div>
        }
    </div>
</div>